{
  "name": "api-base-node",
  "version": "1.0.2",
  "main": "./src/index.js",
  "license": "MIT",
  "author": "Luiz Leite",
  "date:": "30/06/2023",
  "keywords": [],
  "description": "Um template de api em Node-js",
  "scripts": {
    "start:dev": "nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register src/index.ts' -e ts",
    "start:build": "tsc && tsc-alias",
    "start:prod": "node dist/index.js",
    "husky:prepare": "husky install",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:push": "yarn test --coverage"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.4.1",
    "node-schedule": "^2.1.1",
    "oracledb": "^6.0.3",
    "pg": "^8.11.1",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/node-schedule": "^2.1.0",
    "@types/oracledb": "^5.3.0",
    "@types/pg": "^8.10.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  }
}
